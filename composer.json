{
  "name": "hhpack/publisher",
  "type": "library",
  "keywords": [ "hack", "hhvm", "publisher", "subscriber", "pubsub" ],
  "description": "Simple implementation of Pub/Sub for Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.12.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.17",
    "peridot-php/peridot-dot-reporter": "~1.0"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Publisher\\": "src"
    },
    "files": [
      "src/bootstrap.hh"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Publisher\\Spec\\Fixtures\\": "spec/fixtures",
      "HHPack\\Publisher\\Example\\": "example/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/peridot -c peridot.hh --grep *Spec.hh spec -r dot",
    "check": "./typecheck"
  }
}
